/**index.wxss**/
view{
    display:block;
}

#chat{
	position:relative;
	top:0;
	bottom:0;
	left:0;
	right:0;
}
.Main {
    position: relative;
    overflow: auto;
    width:100%;
    height:100%;
    background-color: #EAEAEA;
}
.main {
    position: relative;
    margin-bottom:12px;
    overflow: hidden;
    width:100%;
    height: 100%;
    background-color: #EAEAEA;
}
.m-message {
    padding: 10px 15px;
    overflow-y: scroll;
}
.m-message li {
    margin-bottom: 15px;
}
.m-message .avatar {
    float: left;
    margin: 0 10px 0 0;
    border-radius: 3px;
    width:42px;
    height:42px;
}
.m-message .avatar_ans {
    float: right;
}
.m-message .text {
    display: inline-block;
    position: relative;
    padding: 9px 10px;
    max-width:50%;
    line-height: 1.5;
    font-size: 16px;
    text-align: left;
    word-break: break-all;
    background-color: #fafafa;
    border-radius: 4px;
    border:1px solid #F3F3F3
}
.m-message .text_ans{
    display: inline-block;
    position: relative;
    padding: 9px 10px;
    max-width:45%;
    line-height: 1.5;
    font-size: 16px;
    text-align: left;
    word-break: break-all;
     border-radius: 4px;
    border:1px solid #F3F3F3;
    background-color: #B6E665;
    float:right;
    right:8px;
}
.m-message .text:before {
    content: " ";
    position: absolute;
    top: 15px;
    right: 100%;
    border: 5px solid transparent;
    border-right-color: #fafafa;
}
.m-message .text_ans:before {
    content: " ";
    position: absolute;
    top: 15px;
    border-top: 5px solid transparent;
    border-left: 5px solid #B6E665;
    border-right-color: transparent;
    border-bottom: 5px solid transparent;
    left: 100%;
}
.m-text{
    background-color:#f3f3f3;
    width:100%;
    height:50px;
}
.m-text input{
    position: fixed;
    right:80px;
    bottom: 0;
    left: 0;
    height:50px;
    background-color:#f3f3f3;
    padding-left:10px;
}
#submitBtn{
    position:fixed;
    bottom:10px;
    right:10px;
}
